<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interfaces.Administrador.ListPartidosAdmin.AgregarResultados.AgregarResultadosFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <TextView
            android:id="@+id/txtLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0"
            android:inputType="number" />

        <TextView
            android:id="@+id/txtcontra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/txtVisitante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/editvisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0"
            android:inputType="number" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnGUardar"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/botoninicio"
                android:text="Guardar resultado"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />
        </LinearLayout>


    </LinearLayout>
</FrameLayout>