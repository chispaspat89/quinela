<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bisboguicompany.chispas.quinela.Interfaces.Administrador.ResultadosAdmin.Ganadores.GanadoresFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total de usuarios"
            android:textSize="16dp"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/txtGeneral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="0" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Grande"
            android:textSize="16dp"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/txtGrande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="0" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total chivita"
            android:textSize="16dp"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/txtChivita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            >

            <Button
                android:id="@+id/btnGenerarGrande"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/botoninicio"
                android:text="Generar pdf grande"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnGenerarChivita"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/botoninicio"
                android:text="Generar pdf chivita"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp"
                />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
